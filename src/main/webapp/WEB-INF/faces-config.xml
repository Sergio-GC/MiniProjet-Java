<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
	<managed-bean>
		<managed-bean-name>testBean</managed-bean-name>
		<managed-bean-class>ch.hevs.managedbeans.testBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

	<navigation-rule>
		<from-view-id>/selectUser.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>selectUser</from-outcome>
			<to-view-id>/welcomeTest.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/welcomeTest.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>showDetails</from-outcome>
			<to-view-id>/playlistDetails.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/welcomeTest.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>addSongs</from-outcome>
			<to-view-id>/addSongs.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/welcomeTest.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>createPlaylist</from-outcome>
			<to-view-id>/createPlaylist.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/selectUser.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>createUser</from-outcome>
			<to-view-id>/createUser.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

</faces-config>
